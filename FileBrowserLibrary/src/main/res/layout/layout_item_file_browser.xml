<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/LibItemFileBrowser_llFile"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="?selectableItemBackground"
            android:padding="4dp">

            <ImageView
                android:id="@+id/LibItemFileBrowser_ivFile"
                android:layout_width="68dp"
                android:layout_height="68dp"
                tools:srcCompat="@drawable/ic_pdf" />
            <RelativeLayout
                android:id="@+id/LibItemFileBrowser_tvFileInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/LibItemFileBrowser_tvNameFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    tools:text="Nombre del File" />

                <TextView
                    android:id="@+id/LibItemFileBrowser_tvSizeFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LibItemFileBrowser_tvNameFile"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    tools:text="Peso del File" />

            </RelativeLayout>
            <CheckBox
                android:id="@+id/LibItemFileBrowser_cbImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

